# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration (Render provides this automatically)
DATABASE_URL=postgresql://user:password@host:5432/database

# CoinGecko API (Optional - signup at https://www.coingecko.com/en/api)
# Free Demo tier: 30 calls/min, 10K calls/month
# Leave empty to use public API (slower, less reliable)
COINGECKO_API_KEY=CG-your-api-key-here

# Rate Limiting
RATE_LIMIT_SECONDS=10

# Cache Configuration
CACHE_TTL_MINUTES=30

# Admin User IDs (comma-separated Telegram user IDs)
# Get your user ID by messaging @userinfobot on Telegram
ADMIN_USER_IDS=123456789,987654321
